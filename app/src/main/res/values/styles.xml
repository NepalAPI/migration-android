<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!--<style name="AppTheme.AudioDetail" parent="AppTheme.NoActionBar">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
        <item name="colorPrimary">#F3F3F3</item>
    </style>-->

    <style name="AppTheme.Personalization" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="post_title">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/text_default</item>
        <!--<item name="android:lineSpacingExtra">@dimen/text_big</item>-->
    </style>

    <style name="post_duration">
        <item name="android:textColor">@color/text_color_primary_faded_70</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_marginTop">@dimen/spacing_xxsmall</item>
    </style>

    <style name="showcase" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/black_alpha_55</item>
        <item name="sv_showcaseColor">@color/colorPrimary</item>
        <item name="sv_buttonText">Ok</item>
        <item name="sv_detailTextAppearance">@style/showcase_description</item>
        <item name="sv_titleTextAppearance">@style/showcase_title</item>
    </style>
    <style name="showcase_title" parent="TextAppearance.ShowcaseView.Title">
    </style>
    <style name="showcase_description" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">@color/divider</item>
    </style>

</resources>
